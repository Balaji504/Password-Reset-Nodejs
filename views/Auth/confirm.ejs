
<div class="wrapper-page">

<div class="card">
    <div class="card-body">

        <h3 class="text-center m-0">
            <a href="/" class="logo logo-admin"><img src="public/assets/images/logo.png" height="30" alt="logo"></a>
        </h3>

        <div class="p-3">
            <h4 class="text-muted font-18 mb-3 text-center">change Your Password</h4>
            <% include ../Partials/messages %>
            <form class="form-horizontal m-t-30" action="/confirm" method="POST">
                <div class="form-group">
                    <label for="userpassword">Password</label>
                    <input
                    type="password"
                    id="password"
                    name="password"
                    class="form-control"
                    placeholder="Create Password"
                  />
                </div>

                <div class="form-group">
                    <label for="userpassword">Confirm Password</label>
                    <input
                    type="password"
                    id="password2"
                    name="password2"
                    class="form-control"
                    placeholder="Confirm Password"
                  />
                </div>

                <div class="form-group row m-t-20">
                    <div class="col-12 text-right">
                        <button class="btn btn-primary w-md waves-effect waves-light" type="submit">Reset</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

</div>
